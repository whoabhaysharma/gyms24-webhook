{
    "info": {
        "_postman_id": "whatsapp-webhook-flow",
        "name": "WhatsApp Webhook Flow",
        "description": "Collection to test the WhatsApp Webhook service endpoints.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Health Check",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{base_url}}/health",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "health"
                    ]
                }
            },
            "response": []
        },
        {
            "name": "Verify Webhook (Challenge)",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{base_url}}/webhook?hub.mode=subscribe&hub.verify_token={{verify_token}}&hub.challenge=123456789",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "webhook"
                    ],
                    "query": [
                        {
                            "key": "hub.mode",
                            "value": "subscribe"
                        },
                        {
                            "key": "hub.verify_token",
                            "value": "{{verify_token}}"
                        },
                        {
                            "key": "hub.challenge",
                            "value": "123456789"
                        }
                    ]
                }
            },
            "response": []
        },
        {
            "name": "Receive Message (Webhook Event)",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"object\": \"whatsapp_business_account\",\n  \"entry\": [\n    {\n      \"id\": \"123456789\",\n      \"changes\": [\n        {\n          \"value\": {\n            \"messaging_product\": \"whatsapp\",\n            \"metadata\": {\n              \"display_phone_number\": \"1234567890\",\n              \"phone_number_id\": \"1234567890\"\n            },\n            \"contacts\": [\n              {\n                \"profile\": {\n                  \"name\": \"Test User\"\n                },\n                \"wa_id\": \"919876543210\"\n              }\n            ],\n            \"messages\": [\n              {\n                \"from\": \"919876543210\",\n                \"id\": \"wamid.HBgM1234567890\",\n                \"timestamp\": \"1672531200\",\n                \"text\": {\n                  \"body\": \"Hello Gym\"\n                },\n                \"type\": \"text\"\n              }\n            ]\n          },\n          \"field\": \"messages\"\n        }\n      ]\n    }\n  ]\n}"
                },
                "url": {
                    "raw": "{{base_url}}/webhook",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "webhook"
                    ]
                }
            },
            "response": []
        },
        {
            "name": "Send Manual Message",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"to\": \"919876543210\",\n    \"message\": \"Hello from Postman!\"\n}"
                },
                "url": {
                    "raw": "{{base_url}}/messages",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "messages"
                    ]
                }
            },
            "response": []
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:3000",
            "type": "string"
        },
        {
            "key": "verify_token",
            "value": "my_secure_verify_token",
            "type": "string"
        }
    ]
}